[core]
  excludesfile = ~/.config/.gitignore_global
  editor = nvim

[alias]
  publish ="!git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)"
  dt = "!git difftool --no-symlinks --dir-diff"
  continue = "!git add . && git rebase --continue"

  # https://blog.gitbutler.com/git-tips-1-theres-a-git-config-for-that/
  b = "!git blame -w -C -C -C"
  d = "!git diff --word-diff"

[branch]
  sort = -committerdate

[column]
  ui = auto

# use Kitty terminal as diff tool
[diff]
  tool = kitty
  guitool = kitty.gui

[difftool]
  prompt = false
  trustExitCode = true

[difftool "kitty"]
  cmd = kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
  cmd = kitten diff $LOCAL $REMOTE

[pull]
  ff = only

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[commit]
  gpgsign = true

[gpg]
  format = ssh

[rerere]
  enabled = true
  autoUpdate = true

[include]
  path = ~/.config/gitconfig.local
[user]
	email = hi@crescentro.se
[push]
	autoSetupRemote = true
