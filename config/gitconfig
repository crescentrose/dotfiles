[core]
  excludesfile = ~/.config/.gitignore_global
  editor = /usr/bin/vim

[alias]
  publish ="!git push --set-upstream origin $(git rev-parse --abbrev-ref HEAD)"
  d = "!git difftool --no-symlinks --dir-diff"
  continue = "!git add . && git rebase --continue"

# use Kitty terminal as diff tool
[diff]
  tool = kitty
  guitool = kitty.gui

[difftool]
  prompt = false
  trustExitCode = true

[difftool "kitty"]
  cmd = kitty +kitten diff $LOCAL $REMOTE

[difftool "kitty.gui"]
  cmd = kitty kitty +kitten diff $LOCAL $REMOTE

[pull]
  ff = only

[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[url "git@github.com:ingka-group-digital"]
  insteadOf = https://github.com/ingka-group-digital

# Sign commits using my SSH signing key
[user]
  name = Ivan Oštrić
  email = ivan@halcyon.hr
  # this is my public key
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIKJdAes80dpMrc99B68/1Kx2bbfoh6IrkbFF+60cMQti

[commit]
  gpgsign = true

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

