// -*- mode: jsonc -*-
{
  "height": 30,
  "margin-top": 5,
  // General settings
  // Support Sway IPC for showing and hiding the bar
  "ipc": true,
  // Module order
  "modules-left": [
    "niri/workspaces"
  ],
  "modules-center": [
    "niri/window"
  ],
  "modules-right": [
    "custom/colorscheme",
    "mpd",
    "wireplumber",
    "clock",
    "tray",
    "niri/language",
    "custom/power"
  ],
  "niri/workspaces": {},
  "niri/window": {
    "separate-outputs": true
  },
  "niri/language": {
    "format-nl": "🇳🇱",
    "format-fi": "🇫🇮",
    "format-hr": "🇭🇷",
    "on-click": "niri msg action switch-layout next"
  },
  "custom/colorscheme": {
    "exec": "$HOME/bin/color-scheme waybar",
    "return-type": "json",
    "interval": "once",
    "exec-on-event": true,
    "on-click": "$HOME/bin/color-scheme toggle",
    "format": "{}"
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {title} ",
    "format-disconnected": "Disconnected ",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ",
    "unknown-tag": "N/A",
    "interval": 5,
    "random-icons": {
      "off": "",
      "on": " "
    },
    "max-length": 40,
    "repeat-icons": {
      "on": " "
    },
    "state-icons": {
      "paused": "",
      "playing": ""
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)",
    "on-click": "$HOME/bin/rmpc_kitty"
  },
  "tray": {
    "spacing": 10
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },
  "wireplumber": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% ",
    "format-muted": "󰝟"
  },
  "custom/power": {
    "format": "⏻ ",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/power_menu.xml",
    "menu-actions": {
      "lock": "swaylock -C ~/.config/swaylock/config",
      "shutdown": "shutdown",
      "reboot": "reboot",
      "suspend": "systemctl suspend",
      "logout": "niri msg action quit"
    }
  }
}
