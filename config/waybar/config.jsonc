// -*- mode: jsonc -*-
{
  "height": 34,
  "margin-top": 5,
  "margin-left": 15,
  "margin-right": 15,
  // Draw Waybar on top of the compositor, so that it's visible in the Niri overview
  "layer": "top",
  // General settings
  // Support Sway IPC for showing and hiding the bar
  "ipc": true,
  // Module order
  "modules-left": [
    "custom/power",
    "niri/workspaces",
    "niri/window"
  ],
  "modules-center": [],
  "modules-right": [
    "mpris",
    "wireplumber",
    "tray",
    "custom/colorscheme",
    "niri/language",
    "clock"
  ],
  "niri/workspaces": {},
  "niri/window": {
    "separate-outputs": true,
    "format": "ï‹ {title}"
  },
  "niri/language": {
    "format-nl": "ğŸ‡³ğŸ‡±",
    "format-fi": "ğŸ‡«ğŸ‡®",
    "format-hr": "ğŸ‡­ğŸ‡·",
    "on-click": "niri msg action switch-layout next"
  },
  "custom/colorscheme": {
    "exec": "$HOME/bin/color-scheme waybar",
    "return-type": "json",
    "interval": "once",
    "exec-on-event": true,
    "on-click": "$HOME/bin/color-scheme toggle",
    "format": "{}"
  },
  "mpris": {
    "format": "{status_icon} {artist} - {title} {player_icon}",
    "format-stopped": "",
    "interval": 5,
    "random-icons": {
      "off": "",
      "on": "ï´ "
    },
    "artist-len": 20,
    "title-len": 30,
    "repeat-icons": {
      "on": "ï€ "
    },
    "player-icons": {
      "default": "ï‹",
      "mpd": "ï€",
      "firefox": "î™˜"
    },
    "status-icons": {
      "paused": "ïŒ",
      "playing": "ï‹"
    }
  },
  "tray": {
    "spacing": 10
  },
  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },
  "wireplumber": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% ï€¥",
    "format-muted": "ïš©ó°Ÿ"
  },
  "custom/power": {
    "format": "ó°„›",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "$HOME/.config/waybar/power_menu.xml",
    "menu-actions": {
      "wallpaper": "$HOME/bin/change-wallpaper random",
      "lock": "loginctl lock-screen",
      "shutdown": "systemctl poweroff",
      "reboot": "systemctl reboot",
      "suspend": "systemctl suspend",
      "logout": "niri msg action quit"
    }
  }
}
